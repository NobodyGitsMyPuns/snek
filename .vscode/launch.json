    "version": "0.2.0",
    "configurations": [

 
        {
            "name": "Python: game.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/game.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch index.html in Chrome",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/game_test.py",
            "console": "integratedTerminal"
        }
    ]
}